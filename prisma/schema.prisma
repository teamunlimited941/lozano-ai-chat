generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  name          String?
  phone         String?
  email         String?
  zipcode       String?
  city          String?
  projectType   String?
  description   String?

  source        String   @default("web-chat")
  url           String?
  sessionId     String?
  stage         String   @default("new")
  priority      Int      @default(0)
}